<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:template match="/data">
		<html>
			<head>
				<style>
					table {
					font-family: arial, sans-serif;
					font-size:	10px;
					border-collapse: collapse;
					width:
					100%;
					}
					td, th {
					border: 1px solid #dddddd;
					text-align: left;
					padding: 4px;
					}
					tr:nth-child(even) {
					background-color: #dddddd;
					}
				</style>
			</head>
			<body>
				<h2>Object</h2>
					from : <xsl:value-of select="SourceFile" />
				<p>See below for the list of spectra.</p>
				<p>Table of compounds:</p>
				<table>
					<tr>
						<th>objTitle</th>
						<th>basicCategory</th>
						<th>Type</th>
						<th>SubType</th>
						<th>fileKey</th>
						<th>Level</th>
						<th>FileName</th>
					</tr>
					<xsl:for-each select="chemObjects/object">


<xsl:if test="basicCategory = 'ChemicalStructure'">
						

						<tr>
							<td>
								<xsl:value-of select="objTitle" />
							</td>
							<td>
								<xsl:value-of select="basicCategory" />
							</td>
							<td>
								<xsl:value-of select="Type" />
   <!-- Content: here trying if...  -->
   								<xsl:if test="SubType = '333DNMR'">
									*top
								</xsl:if> 
							</td>
							<td>
								<xsl:value-of select="SubType" />
							</td>
							<td>
								<xsl:value-of select="fileKey" />
							</td>
							   <!-- Content: here trying choose ...  -->

							<xsl:choose>
								<xsl:when test="Level &gt; 31113">
									<td bgcolor="#ff00ff">
									<xsl:value-of select="Level"/></td>
								</xsl:when>
								<xsl:otherwise>
									<td>
									<xsl:value-of select="Level"/></td>
								</xsl:otherwise>
							</xsl:choose>
							<td>
								<xsl:value-of select="fileName" />
							</td>
						</tr>
						</xsl:if> 
					</xsl:for-each>
				</table>

				<p>Table of high-order objects (spectra in this case)</p>
				<table>
					<tr>
						<th>objTitle</th>
						<th>basicCategory</th>
						<th>Type</th>
						<th>SubType</th>
						<th>fileKey</th>
						<th>Level</th>
						<th>FileName</th>
					</tr>
					<xsl:for-each select="chemObjects/object">



							<xsl:choose>
								<xsl:when test="Level &gt; 33">



						<tr>
							<td>
								<xsl:value-of select="objTitle" />
							</td>
							<td>
								<xsl:value-of select="basicCategory" />
							</td>
							<td>
								<xsl:value-of select="Type" />
   								
							</td>
							<td>
								<xsl:value-of select="SubType" />
							</td>
							<td>
								<xsl:value-of select="fileKey" />
							</td>
							   <!-- Content: here trying choose ...  -->

							<xsl:choose>
								<xsl:when test="Level &gt; 31113">
									<td bgcolor="#ff00ff">
									<xsl:value-of select="Level"/></td>
								</xsl:when>
								<xsl:otherwise>
									<td>
									<xsl:value-of select="Level"/></td>
								</xsl:otherwise>
							</xsl:choose>
							<td>
								<xsl:value-of select="fileName" />
							</td>
						</tr>
														</xsl:when>
							</xsl:choose>
					</xsl:for-each>
				</table>
			</body>
		</html>
	</xsl:template>
</xsl:stylesheet>
   
          